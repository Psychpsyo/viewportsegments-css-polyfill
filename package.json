{
  "name": "spanning-css-polyfill",
  "version": "1.0.0",
  "description": "Polyfill for CSS spanning media query",
  "source": "src/index.js",
  "module": "dist/spanning-css-polyfill.js",
  "directories": {
    "test": "tests"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/plugin-transform-modules-commonjs": "^7.9.0",
    "@babel/register": "^7.9.0",
    "concurrently": "^5.1.0",
    "microbundle": "^0.11.0",
    "serve": "^11.3.0",
    "tape": "^4.11.0",
    "copyfiles": "^2.2.0",
    "jsdoc": "^3.6.3"
  },
  "scripts": {
    "build": "microbundle -f es",
    "dev": "concurrently serve \"microbundle -f es watch\"",
    "test": "tape -r @babel/register tests/*.js",
    "generate-docs": "jsdoc -d docs/ src/index.js README.md && copyfiles images/* docs/"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-modules-commonjs"
    ]
  },
  "author": {
    "name": "Zouhir Chahoud",
    "email": "zouhir@zouhir.org",
    "url": "https://zouhir.org/"
  },
  "license": "MIT"
}
